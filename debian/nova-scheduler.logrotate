/var/log/nova/nova-scheduler.log {
    daily
    missingok
    compress
    delaycompress
    notifempty
    postrotate
        if dpkg-vendor --derives-from ubuntu ; then
            service nova-scheduler restart >/dev/null 2>&1 || true
        else
            invoke-rc.d nova-scheduler restart >/dev/null 2>&1 || true
        fi
    endscript
}
