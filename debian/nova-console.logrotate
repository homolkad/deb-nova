/var/log/nova/nova-console.log /var/log/nova/nova-consoleauth.log {
    daily
    copytruncate
    missingok
    compress
    delaycompress
    notifempty
    postrotate
        if dpkg-vendor --derives-from ubuntu ; then
            service nova-console restart >/dev/null 2>&1 || true
        else
            invoke-rc.d nova-console restart >/dev/null 2>&1 || true
        fi
    endscript
}
