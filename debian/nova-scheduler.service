[Unit]
Description=OpenStack Compute Scheduler
Documentation=http://docs.openstack.org/
After=postgresql.service mysql.service keystone.service network.service

[Service]
User=nova
Group=nova
ExecStart=/etc/init.d/nova-scheduler systemd-start
ExecStop=/etc/init.d/nova-scheduler systemd-stop
PIDFile=/var/run/nova/nova-scheduler.pid
Restart=on-failure
Type=forking

[Install]
WantedBy=multi-user.target

