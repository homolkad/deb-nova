[Unit]
Description=OpenStack Compute Conductor
Documentation=http://docs.openstack.org/
After=postgresql.service mysql.service keystone.service rabbitmq-server.service ntp.service network.service

[Service]
User=nova
Group=nova
ExecStart=/etc/init.d/nova-conductor systemd-start
ExecStop=/etc/init.d/nova-conductor systemd-stop
PIDFile=/var/run/nova/nova-conductor.pid
Restart=on-failure
Type=forking

[Install]
WantedBy=multi-user.target

