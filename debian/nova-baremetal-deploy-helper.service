[Unit]
Description=OpenStack Compute Baremetal
Documentation=http://docs.openstack.org/
After=postgresql.service mysql.service keystone.service network.service

[Service]
User=nova
Group=nova
ExecStart=/etc/init.d/nova-baremetal-deploy-helper systemd-start
ExecStop=/etc/init.d/nova-baremetal-deploy-helper systemd-stop
PIDFile=/var/run/nova/nova-baremetal-deploy-helper.pid
Restart=on-failure
Type=forking

[Install]
WantedBy=multi-user.target

