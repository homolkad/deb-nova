/var/log/nova/nova-api.log {
    daily
    missingok
    compress
    delaycompress
    postrotate
        if dpkg-vendor --derives-from ubuntu ; then
            service nova-api restart >/dev/null 2>&1 || true
        else
            invoke-rc.d nova-api restart >/dev/null 2>&1 || true
        fi
    endscript
}
